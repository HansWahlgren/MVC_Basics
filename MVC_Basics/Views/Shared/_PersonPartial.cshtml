@model List<Person>


@foreach (var person in Model)
{
    <div class="row" id="edit @person.Id">
        <div class="col">
            <p>@person.Name</p>
        </div>
        <div class="col">
            <p>@person.PhoneNumber</p>
        </div>
        <div class="col">
            <p>@person.City</p>
        </div>
        <div class="col">
            <a class="EditBtnPartial btn btn-warning" id="@person.Id" onclick="formEditPerson(event)" asp-controller="People" asp-action="FormEditPerson" data-target="edit @person.Id">Edit</a>
        </div>
        <div class="col">
            <a class="RemoveBtnPartial btn btn-danger" id="@person.Id">Remove</a>
        </div>
    </div>
}
<script>prepareRemove()</script>
